---
// 1. Get props from the parent page
const { t, hasProjects, hasExperience, hasEducation } = Astro.props;
---

<header
  id="header"
  class="fixed top-0 text-sm sm:text-xl left-0 right-0 z-50 block transition-all duration-300 backdrop-blur-sm bg-[linear-gradient(to_bottom,rgba(255,255,255,0.8),rgba(255,255,255,0))]"
>
  <nav class="max-w-7xl mx-auto px-2 py-4">
    <ul class="flex items-center gap-5 sm:gap-6 justify-center">
      <li>
        <a
          href="#about"
          class="text-gray-700 hover:text-black transition-colors font-medium"
        >
          {t.about} <!-- Use translation -->
        </a>
      </li>
      {
        hasProjects && (
          <li>
            <a
              href="#projects"
              class="text-gray-700 hover:text-black transition-colors font-medium"
            >
              {t.projects}
            </a>
          </li>
        )
      }
      {
        hasExperience && (
          <li>
            <a
              href="#experience"
              class="text-gray-700 hover:text-black transition-colors font-medium"
            >
              {t.experience} <!-- Use translation -->
            </a>
          </li>
        )
      }
      {
        hasEducation && (
          <li>
            <a
              href="#education"
              class="text-gray-700 hover:text-black transition-colors font-medium"
            >
              {t.education} <!-- Use translation -->
            </a>
          </li>
        )
      }
    </ul>
  </nav>
</header>

<script>
  // Listen for the custom event from Scroll.astro
  window.addEventListener("loco-scroll", (event) => {
    // TypeScript users: 'event.detail' is not directly accessible on a generic Event.
    // Use type assertion to access custom properties.
    const scrollPosition = (event as CustomEvent).detail.scrollPosition;
    const header = document.getElementById("header");

    if (scrollPosition > 100) {
      header?.classList.add("bg-white/80", "backdrop-blur-sm");
    } else {
      header?.classList.remove("bg-white/80", "backdrop-blur-sm");
    }
  });
</script>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
